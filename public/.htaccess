<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow existing files and folders
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect all other routes to React
  RewriteRule . /index.html [L]
</IfModule>
